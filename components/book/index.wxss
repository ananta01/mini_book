.book-wrap {
  margin-top: 30rpx;
  display: flex;
  position: relative;
  box-shadow: 2px 2px 3px #e3e3e3;
  flex-direction: column;
  width: 240rpx;
  height: 360rpx;
}

.book-wrap > image {
  width: 100%;
  height: 100%;
  border-radius: 2px;
}

.book-desc {
  width: 100%;
  position: absolute;
  bottom: 0;
  padding: 5rpx 10rpx 8rpx 15rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  border-radius: 0 0 2px 2px;
  background: #fff;
  font-size: 24rpx;
}

.title {
  margin-top: 10rpx;
}

.author {
  font-size: 20rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.title, .author {
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.foot {
  font-size: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

.footer {
  color: #666;
}