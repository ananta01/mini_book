.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header {
  width: 750rpx;
  height: 100rpx;
  position: fixed;
  top: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: #fff;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
  z-index: 99;
}

.search-container {
  height: 66rpx;
  display: inline-flex;
  flex-direction: row;
  align-items: center;
  background: #f5f5f5;
  border-radius: 50px;
  margin: 0 20rpx;
}

.bar {
  width: 500rpx;
  height: 34rpx;
  border-radius: 0 15px 15px 0;
}

.in-bar {
  color: #999;
}

.icon, .cancel-img {
  width: 14px;
  height: 14px;
  margin: 0 12rpx 0 20rpx;   
}

.cancel {
  width: 60px;  
  line-height: 34px;
  margin-bottom: 4rpx;
}

.history {
  width: 690rpx;
  margin: 40rpx 0 20rpx 0;
  display: flex;
  flex-direction: column;
  margin-top: 160rpx;
  font-size: 14px;
}

.hot-search{
  margin-top:70rpx;
}

.title {
  display: flex;
  line-height: 15px;  
}

.title > text {
  color: #000;
}

.tags {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-top: 24rpx;
  padding-left: 15px;
  width: 630rpx;
}

.tags > .tag-text {
  margin: 0 15rpx 10rpx 0;
}

.tags > tag:nth-child(1) > view {
  background: #fffbdd;
}

.tags > tag:nth-child(2) > view {
  background: #eefbff;
}

.chunk {
  height: 15px;
  width: 5px;
  background-color: #000;
  display: inline-block;
  margin-right: 10px;
}

.books-wrap {
  width: 570rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;  
  flex-wrap: wrap;
  margin-top:100rpx;
  padding: 0 90rpx 90rpx 90rpx;
}

.book {
  display: inline-block;
  padding: 0 22rpx;
}

.loading-center {
  position: absolute;
  top: 50%;
  left: 50%;
}