.detail-wrap {
  background: #f5f5f5;
  width: 100%;
}

.header {
  background: #fff;
  padding: 40rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header > image {
  width: 200rpx;
  height: 300rpx;
  box-shadow: 2px 2px 3px #e3e3e3;
}

.title {
  margin-top: 20rpx;
  font-size: 38rpx;
  font-weight: 600;
  color: #2f2f2f;
}

.author {
  font-size: 28rpx;
  color: #999;
  margin-top: 10rpx;
}

.short-container {
  width: 690rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 30rpx;
  padding: 30rpx;
  background: #fff;
}

.headline {
  margin-bottom: 20rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #2f2f2f;
}

.shadow {
  background: #999;
}

.comments-container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin: 0 10rpx;
}

.comments-container > tag {
  margin: 0 15rpx 10rpx 0;
}

.slot-nums {
  padding-left: 10rpx;
  font-size: 22rpx;
  color: #aaa;
}

.comments-container > tag:nth-child(1) > view {
  background: #fffbdd;
}

.comments-container > tag:nth-child(2) > view {
  background: #eefbff;
}

.content {
  text-indent: 58rpx;
  line-height: 46rpx;
  font-weight: 500;
}

.detail-container {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin-bottom: 100rpx;
  font-size: 28rpx;
  color: #666;
}

.vertical {
  display: flex;
  flex-direction: column;
}

.desc {
  color: #999;
  margin-right: 30rpx;
}

.post-wrap {
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0 30rpx;
  background: #fff;
}

.post-fake {
  width: 460rpx;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 20rpx;
  border: 1px solid #999;
  border-radius: 15px;
  font-size: 22rpx;
}

.like-wrap {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.like {
  margin: 10rpx 0 0 30rpx;
}

.posting-wrap {
  width: 100%;
  position: fixed;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 9999;
  background: #fff;
}

.post-header {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #f5f5f5;
  border-top: 1px solid #f5f5f5;
}

.post-header > text {
  padding: 25rpx;
}

.post-header > text:first-child {
  font-size: 28rpx;
  color: #bbb;
}

.cancel {
  color: #666;
}

.posting-wrap .comments-container {
  width: 690rpx;
  padding: 40rpx 30rpx 0 30rpx;
}

.post {
  width: 690rpx;
  height: 60rpx;
  margin: 30rpx auto;
  padding-left: 25rpx;
  border-radius: 15rpx;
  background: #f5f5f5;
}