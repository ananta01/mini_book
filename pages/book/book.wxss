.wrap {
  width: 100%;
  height: 100%;
}

.book-wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 100%;
}

.sub-wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #f5f5f5;
  margin-top: 100rpx;
}

.header {
  position: fixed; 
  background-color: #ffffff;
  height:100rpx;
  width:100%;
  border-top:1px solid #f5f5f5;
  border-bottom:1px solid #f5f5f5;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  box-shadow:0 0 3px 0 #e3e3e3; 
  z-index: 99;
}

.box {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-radius: 50px;
  background: #f5f5f5;
  height: 68rpx;
  width: 700rpx;
  color: #999;
}

.box > image {
  margin-right:10px;
  width:14px;
  height:14px;
  margin-bottom:-2px;
}

.head-img {
  width:106rpx;
  height:34rpx;
  margin-top:40rpx;
}

.books-wrap {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex-wrap: wrap;
  padding: 40rpx 90rpx;
}


.search {
  height: 100%;
}